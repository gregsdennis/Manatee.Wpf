<Window x:Class="Manatee.Wpf.Tests.Client.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" x:Name="Root" Background="WhiteSmoke"
		Title="MainWindow" Height="350" Width="525" SizeToContent="Height" ResizeMode="CanMinimize">
	<TabControl Margin="7">
		<TabItem Header="Forms" ContentTemplate="{StaticResource Forms}"/>
		<TabItem Header="Message Boxes" ContentTemplate="{StaticResource MessageBox}"/>
		<TabItem Header="Converters" ContentTemplate="{StaticResource Converters}"/>
		<TabItem Header="Event Binding" ContentTemplate="{StaticResource EventBinding}"/>
		<TabItem Header="Other Controls" ContentTemplate="{StaticResource OtherControls}"/>
	</TabControl>
</Window>
