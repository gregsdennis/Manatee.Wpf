<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:wpf="clr-namespace:Manatee.Wpf;assembly=Manatee.Wpf"
					xmlns:client="clr-namespace:Manatee.Wpf.Tests.Client">
	<HierarchicalDataTemplate DataType="{x:Type client:FileSystemObject}" ItemsSource="{Binding Children}">
		<TextBlock Text="{Binding Name}"/>
	</HierarchicalDataTemplate>

	<DataTemplate x:Key="MillerColumns">
		<wpf:MillerColumnView ItemsSource="{Binding HierarchicalDataSource, ElementName=Root}"/>
	</DataTemplate>
</ResourceDictionary>